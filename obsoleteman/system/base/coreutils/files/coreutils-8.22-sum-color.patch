+/* BEGIN COLOR */
+
+#define CODCOL_BRIGHT "0"
+
+struct color {
+  int r;
+  int g;
+  int b;
+  const char *code;
+};
+
+static struct color const colors[] =
+{
+  {255,   0,   0, "31"},
+  {  0, 255,   0, "32"},
+  {255, 255,   0, "33"},
+  {  0,   0, 255, "34"},
+  {255,   0, 255, "35"},
+  {  0, 255, 255, "36"},
+};
+
+unsigned int square_dist(
+    const struct color *c1,
+    const struct color *c2)
+{
+  int xd = c2->r - c1->r;
+  int yd = c2->g - c1->g;
+  int zd = c2->b - c1->b;
+  return (xd * xd + yd * yd + zd * zd);
+}
+
+/* END COLOR */
+
